{
    "manifest_version": 3,
    "version": "0.1",
    "name": "AltSpeakify ðŸ”Š",
    "description": "No alt text? No problem - just AltSpeakify it! This extension helps those who are visually impaired better navigate the web.",
    "action": {
        "default_popup": "html/popup.html",
        "default_title": "AltSpeakify ðŸ”Š"
    },
    "icons": {
        "64": "icon/logo-64.png",
        "16": "icon/logo-50.png"
    },
    "options_page": "html/settings.html",
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "commands": {
        "imgDesc": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            },
            "description": "Describe the image currently being hovered over."
        }
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "tone.mp3"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}